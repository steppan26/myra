<section class="show-budget-wrapper">
  <div class="edit-btn">
    <i class="fas fa-edit" data-action='click->subscriptionShow#display_edit'></i>
  </div>
  <div class="budget-show-header">
    <h2><%= @budget.name.upcase %></h2>
    <h5>Budget: <%= humanized_money_with_symbol @budget.price_per_month %></h5>
  </div>
  <% if @budget.subscriptions.empty? %>
    <h6>There are no subscriptions in this budget</h6>
  <% else %>
    <ul>
      <% @budget.subscriptions.each do |subscription| %>
        <li>
          <%= render 'subscriptions/subscription_card', subscription: subscription %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= link_to budget_path(@budget), method: :delete, data: { confirm: "Are you sure you wish to delete this budget?" }, class: "delete-btn" do %>
    <p>Delete budget</p>
  <% end %>
</section>
