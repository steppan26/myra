<section class="show-budget-wrapper" data-controller="budgetShow">
  <div>
    <div class="budget-show-header">
      <div class="edit-btn budget">
        <i class="fas fa-edit" data-action='click->budgetShow#display_edit'></i>
      </div>
      <h1 class="page-title"><%= @budget.name.upcase %></h1>
      <div class="budget-info show">
      <p><%=@budget.subscriptions.count%> <%= "subscription".pluralize(@budget.subscriptions.count) %></p>
      <div class="budget-amounts">
        <p>Budget: <span class="ms-3"><%= humanized_money_with_symbol @budget.price_per_month %></span></p>
        <% total_price = Money.new(0) %>
        <% @budget.subscriptions.each do |sub| %>
          <% total_price += sub.price_per_day * 30 %>
        <% end %>
        <% progress_percent = ((total_price / @budget.price_per_month) * 100).round.to_i %>
      </div>
    </div>
    <% if progress_percent > 100 %>
    <div class="progress-bar" style="background: #9b0e0e;">
      <p><%= humanized_money_with_symbol total_price %></p>
    </div>
    <% else %>
    <div class="progress-bar" style="background-image: linear-gradient(to right, #6644B8 <%=progress_percent%>%, #17082A <%=progress_percent%>%);">
      <p><%= humanized_money_with_symbol total_price %></p>
    </div>
    <% end %>

    </div>
    <ul class="hidden">
      <li class="new-sub-btn" data-action='click->budgetShow#add_subs'>+</li>
      <% unless @budget.subscriptions.empty? %>
        <% @budget.subscriptions.each do |subscription| %>
          <li>
            <%= link_to subscription_path(subscription) do %>
              <%= render "subscriptions/subscription_card", subscription: subscription %>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
    <ul class="budgets-wrapper edit">
      <% @user_subscriptions.each do |subscription| %>
        <li data-action="click->budgetShow#display_edit"><%= render 'subscriptions/subscription_card', subscription: subscription %></li>
      <% end %>
    </ul>
  </div>
  <%= link_to budget_path(@budget), method: :delete, data: { confirm: "Are you sure you wish to delete this budget?" }, class: "delete-btn" do %>
    <p>Delete budget</p>
  <% end %>
</section>
