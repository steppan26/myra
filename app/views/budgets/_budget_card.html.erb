<div class="budget-card">
  <div class="shrink">
    <h4><%= budget.name %></h4>
    <div class="budget-amounts">
      <h6>Budget: <%= budget.price_per_month_cents %>€</h6>
      <% total_price = 0 %>
      <% budget.subscriptions.each do |sub| %>
        <% total_price += sub.price_per_day_cents * 30 %>
      <% end %>
      <h6>Current: <%= '%.2f' % (total_price.to_f) %>€</h6>
    </div>
  </div>
  <h6><%=budget.subscriptions.count%> <%= "subscriptions".pluralize(2) %></h6>
</div>

<div class="slider-delete">
<%= link_to "fas fa-trash-alt" budget_path(@budget), data: {method: :delete, confirm: "Are you sure you wish to delete #{@budget.name}?"} do %>
  <h5>Delete Budget</h5>
<% end %>
</div>
