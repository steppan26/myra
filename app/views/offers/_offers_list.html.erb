<h2 class="text-center my-3">Which offer do you have?</h2>
<ul class="categories-list">
  <% offers.each do |offer| %>
    <li
      class="categories-item"
      data-action="click->newForm2#showOffers"
      style="background-image: linear-gradient(to top, rgba(10,10,10,0.4), rgba(10,10,10,0.2)), url('https://loremflickr.com/640/360')"
    >
      <h4 class="categories-title"><%= offer.name %></h4>
    </li>
  <% end %>
  <li
      class="categories-item"
      data-action="click->newForm2#showOffers"
      style="background-image: linear-gradient(to top, rgba(10,10,10,0.4), rgba(10,10,10,0.2)), url('https://loremflickr.com/640/360')"
    >
      <h4 class="categories-title">Custom...</h4>
    </li>
</ul>
