<div class="container">
  <%= link_to dashboard_path do %>
    <i class="fas fa-angle-left back"></i>
  <% end %>
  <br><br>
  <h2>Settings</h2>
  <br>
  <div class="infos" data-controller="edit-infos">
  <h6><i class="fas fa-envelope"></i>&nbsp;&nbsp;&nbsp;&nbsp;<strong>Email</strong>: <%= current_user.email %>
    <% if policy(User).update? %>
    <i class="far fa-edit" data-edit-infos-target="mail"></i>
     <%= simple_form_for current_user, html: { class: 'd-none', data: { edit_infos_target: 'mail_form' } } do |f| %>
      <%= f.input :email %>
      <%= f.submit "Done", class:"btn btn-primary" %>
    <% end %>
  <% end %>
  </h6>
  <br>
  <h6><i class="fas fa-money-check"></i>&nbsp;&nbsp;&nbsp;<strong>Total budget</strong>: <%= humanized_money_with_symbol current_user.global_budget%>/month
  <% if policy(User).update? %>
    <i class="far fa-edit" data-edit-infos-target="budget"></i>
     <%= simple_form_for current_user, html: { class: 'd-none', data: { edit_infos_target: 'budget_form' } } do |f| %>
       <%= f.input :global_budget %>
      <%= f.submit "Done", class:"btn btn-primary" %>
    <% end %>
  <% end %>
  </h6>
</div>
