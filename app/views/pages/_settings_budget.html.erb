<div data-edit-infos-target="budgetcard">
  <div data-edit-infos-target="budget">
    <h6><i class="fas fa-money-check"></i>&nbsp;&nbsp;&nbsp;<strong>Total budget</strong>: <%= humanized_money_with_symbol current_user.global_budget%>/month
      <i class="far fa-edit" data-action="click->edit-infos#displayForm2"></i>
    </h6>
    </div>
  <%= simple_form_for current_user, html: { class: 'd-none', data: { edit_infos_target: 'budgetform', action: 'submit->edit-infos#update2' } } do |f| %>
    <%= f.input :global_budget %>
    <%= f.submit "Done", class:"btn btn-primary" %>
  <% end %>
</div>
