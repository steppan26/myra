<div class="sub-wrapper <%= offer.category.name.gsub(/\W/, '') %>">
  <% if offer.service %>
    <img class="sub-logo" src="<%=offer.service.image_url%>" alt="<%=offer.service.name%>">
  <% else %>
    <img class="sub-logo" src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.shareicon.net%2Fdata%2F2017%2F07%2F13%2F888376_office_512x512.png&f=1&nofb=1" alt="custom offer">
  <% end %>
  <h3 class="sub-title"><%= offer.service_name %></h3>
  <div class="sub-price-wrapper">
    <h5><%= offer.price %>â‚¬ </h5>
    <h5> / <%= offer.frequency %></h5>
  </div>
  <div class="user-submition-wrapper">
    <h5>Renewal Date</h5>
    <div class="input-wrapper">
      <i class="far fa-calendar-alt"></i>
      <input type="date" id="renewal-date-input" data-newForm2-target="renewalInput">
    </div>
  </div>
  <div class="user-submition-wrapper">
    <h5>When would you like to be reminded?</h5>
    <div class="input-wrapper">
      <i class="far fa-bell"></i>
      <input type="tel" name="reminder-delay" id="reminder-delay" data-newForm2-target="delayInput">
      <select name="frequency-select" id="frequency-select" data-newForm2-target="delayFrequencyInput">
        <option value="month">Month(s)</option>
        <option value="week">Week(s)</option>
        <option value="day">Day(s)</option>
      </select>
      <p>before</p>
    </div>
  </div>
  <div class="user-submition-wrapper">
    <textarea row='2' placeholder="Additional Info" name="" id="submit-sub" data-newForm2-target="infoInput"></textarea>
  </div>
  <%= link_to dashboard_path, class: "button-cancel" do %>
    <i class="fas fa-times"></i>
  <% end %>
  <div class="button-accept" data-action='click->newForm2#createSubscription'>
    <i class="fas fa-check"></i>
  </div>
</div>
