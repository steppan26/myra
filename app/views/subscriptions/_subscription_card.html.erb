<div class="sub-card" data-sub-value="<%= subscription.id %>">
  <img src="<%= subscription.image_url %>" alt="<%= subscription.offer.service_name %>">
  <div>
    <h4><%= subscription.offer.service_name %></h4>
    <h6><%= subscription.offer.price %>â‚¬ <%= subscription.offer.frequency %></h6>
    <div class="sub-card-days-remaining">
      <% renewal_date = (subscription.renewal_date - Date.today).to_i %>
      <% if renewal_date < 2  %>
        <h6 class=" notification alert"><i class="fas fa-exclamation-triangle"></i> <%= renewal_date %> <%= "day".pluralize(2) %></h6>
      <% elsif renewal_date > 30 %>
        <h6 class="notification success"><i class="far fa-check-square"></i> <%= time_ago_in_words(subscription.renewal_date) %></h6>
      <% else %>
        <h6 class="notification success"><i class="far fa-check-square"></i> <%= renewal_date %> <%= "day".pluralize(2) %></h6>
      <% end %>
    </div>
  </div>
</div>
